<% @top_participants.each do |participant| %>
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <div class="card-header"><%= participant.name %></div>
      <div class="card-body">
        <p class="card-text">Average Score:: <%= participant.average_score %></p>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <%= link_to "View", member_path(participant.id) ,class: "btn btn-sm btn-outline-secondary" %>
            <%= link_to "Edit", edit_member_path(participant.id) ,class: "btn btn-sm btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end if @top_participants %>